{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@thrifty/ui": ["../../packages/ui/src/index.ts"],
      "@thrifty/ui/*": ["../../packages/ui/src/*"],
      "@thrifty/utils": ["../../packages/utils/src/index.ts"],
      "@thrifty/utils/*": ["../../packages/utils/src/*"],
      "@thrifty/config": ["../../packages/config/index.ts"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next-dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
