{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@thrifty/ui": [
        "../../packages/ui/src/index.native.ts"
      ],
      "@thrifty/ui/*": [
        "../../packages/ui/src/*.native"
      ],
      "@thrifty/utils": [
        "../../packages/utils/src/index.ts"
      ],
      "@thrifty/utils/*": [
        "../../packages/utils/src/*"
      ],
      "@thrifty/config": [
        "../../packages/config/index.ts"
      ]
    },
    "jsx": "react-native",
    "jsxImportSource": "nativewind"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}